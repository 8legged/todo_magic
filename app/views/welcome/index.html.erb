<h1>Welcome#index</h1>
<p>Find me in app/views/welcome/index.html.erb</p>

<div id="list">
  <%= render 'list' %>
</div>

<!-- Button trigger modal -->
<button class="btn btn-warning btn-lg" data-toggle="modal" data-target="#create-todo">
  Create Todo
</button>

<!-- Modal -->
<div class="modal fade" id="create-todo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Create Todo</h4>
      </div>
      <div class="modal-body">
        <%= render 'todos/form' %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->